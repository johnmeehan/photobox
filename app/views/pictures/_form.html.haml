
.row
  .col-lg-6
    = form_for @picture, :html => {:multipart => true, class: "form-signin"} do |f|
      - if @picture.errors.any?
        #error_explanation.alert.alert-danger
          %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
          %ul
            - @picture.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.text_field :title, {class: "form-control", placeholder: "Title"}
      .field
        = f.text_area :description, {class: "form-control input-sm", placeholder: "Description"}
      .field
        = f.file_field :file
      .actions
        = f.submit 'Save', class: "btn btn-primary btn-block"
